<div class="center-between">
	<a href="<%= root_path %>"><button class="margin-1">Home</button></a>
	<button class="margin-1" onclick="generateExcel()">Export to Excel</button> 
	<!-- <button type="button" class="margin-1 btn saveAsExcel">Export to Excel</button> -->
</div>

<table id="table_with_data">
	<tbody>
		<tr class="header">
			<th>Company Name</th>
			<th>ticker</th>
			<th>Price</th>
			<!-- <th>Moving Average 1yr</th>
			<th>Net Income</th>
			<th>Total Assets</th>
			<th>Total Liabilities</th>
			<th>Total Debt</th>
			<th>Net Worth</th>
			<th>Debt to Assets</th> -->
			<th>Gross Profit</th>
            <th>P/E Ratio</th>
			<!-- <th>Description</th>
			<th>Industry</th>
			<th>Primary Exchange</th> -->
			<th>Profit Margin</th>
			<th>Price to Sales</th>
			<th>Revenue</th>
			<th>EBITDA</th>
			<th>EV to Revenue</th>
		</tr>
		<% @stocks.each do |stock| %>
		<tr>
			<td><%= stock.company_name %></td>
			<td><%= stock.ticker %></td>
			<td><%= stock.latest_price %></td>
			<!-- <td><#%#= #stock.moving_average ? (sprintf "%d%%", stock.moving_average) : nil %></td>
			<td><#%#= #stock.net_income ? stock.net_income.to_i : nil %></td>
			<td><#%#= #stock.total_assets ? stock.total_assets.to_i : nil %></td>
			<td><#%#= #stock.total_liabilities ? stock.total_liabilities.to_i : nil  %></td>
			<td><#%#= #stock.total_debt ? stock.total_debt.to_i : nil %></td>
			<td><#%#= #stock.net_worth ? stock.net_worth.to_i : nil %></td>
			<td><#%#= #stock.debt_to_assets ? (sprintf "%d%%", stock.debt_to_assets) : nil %></td> -->
			<td><%= stock.gross_profit ? stock.gross_profit.to_i : nil  %></td>
			<td><%= stock.pe_ratio ? stock.pe_ratio : nil %></td>
			<!-- <td><#%#= #stock.description %></td>
			<td><#%#= #stock.industry %></td>
			<td><#%#= #stock.primary_exchange %></td> -->
			<td><%= stock.profit_margin ? stock.profit_margin : nil %></td>
			<td><%= stock.price_to_sales ? stock.price_to_sales : nil %></td>			
			<td><%= stock.revenue ? stock.revenue : nil %></td>
			<td><%= stock.ebitda ? stock.ebitda : nil %></td>
			<td><%= stock.enterprise_value_to_revenue ? stock.enterprise_value_to_revenue : nil %></td>
		</tr>
		<% end %>
	</tbody>
</table>


